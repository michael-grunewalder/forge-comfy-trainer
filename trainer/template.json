{
  "name": "KohyaSS Trainer + Jupyter",
  "description": "KohyaSS training environment with shared model directory and JupyterLab preinstalled for dataset preparation and LoRA training.",
  "image": "ghcr.io/michael-grunewalder/trainer:latest",
  "port": 7861,
  "startScript": "/workspace/Apps/Trainer/start.sh",
  "volumeMounts": [
    { "containerPath": "/workspace", "hostPath": "/workspace" }
  ],
  "env": {
    "START_JUPYTER": "true"
  },
  "ports": [
    { "containerPort": 7861, "protocol": "http" },
    { "containerPort": 8890, "protocol": "http" }
  ],
  "defaultVolumeSizeGb": 50,
  "defaultGpu": "A6000",
  "categories": ["Training", "KohyaSS", "LoRA"]
}